<script type="text/javascript" >
  function setCookie(cname, cvalue, exdays) {
      var d = new Date();
      d.setTime(d.getTime() + (exdays*24*60*60*1000));
      var expires = "expires="+ d.toUTCString();
      document.cookie = cname + "=" + cvalue + ";" + expires + ";path=/";
  }

  function getCookie(cname) {
      var name = cname + "=";
      var decodedCookie = decodeURIComponent(document.cookie);
      var ca = decodedCookie.split(';');
      for(var i = 0; i <ca.length; i++) {
          var c = ca[i];
          while (c.charAt(0) == ' ') {
              c = c.substring(1);
          }
          if (c.indexOf(name) == 0) {
              return c.substring(name.length, c.length);
          }
      }
      return null;
  }

  function checkAcceptedCookies() {
    if (!getCookie('acceptedCookies'))
    {
      setVisibleCookieBanner();
    }
  }

  function acceptCookies() {
    setCookie("acceptedCookies", true, 365);
    setHiddenCookieBanner();
  }

  function setVisibleCookieBanner() {
    var x = document.getElementById("CookieAlert");
    x.style.visibility = "visible";
  }

  function setHiddenCookieBanner() {
    var x = document.getElementById("CookieAlert");
    x.style.visibility = "hidden";
  }

  checkAcceptedCookies();
</script>

